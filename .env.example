# Banco de origem
SRC_HOST=localhost
SRC_PORT=3306
SRC_USER=root
SRC_PASSWORD=secret
SRC_DATABASE=origem_db

# Banco de destino
DST_HOST=localhost
DST_PORT=3306
DST_USER=root
DST_PASSWORD=secret
DST_DATABASE=destino_db

# Opções
# Número de tabelas processadas em paralelo (cuidado com sobrecarga)
CONCURRENCY=4
# Número de operações de schema (DROP/CREATE) processadas em paralelo
# Mantenha 1 para evitar contenção de locks de metadados
SCHEMA_CONCURRENCY=1
# Linhas por INSERT (multi-values) ao copiar dados por streaming
BATCH_SIZE=1000
# Lista de tabelas a incluir (se vazio, inclui todas); separadas por vírgula
INCLUDE_TABLES=
# Lista de tabelas a excluir; separadas por vírgula
EXCLUDE_TABLES=
# Verifica contagem de linhas (origem vs destino) ao final de cada tabela
VERIFY=1
# Apenas simula processo (não conecta, não executa SQL)
DRY_RUN=0
# Pula conexões explicitamente (implicado se DRY_RUN=1)
SKIP_CONNECT=0
