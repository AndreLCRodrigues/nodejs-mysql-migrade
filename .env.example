# Banco de origem
SRC_HOST=REPLACE_ME_SRC_HOST
SRC_PORT=3306
SRC_USER=REPLACE_ME_SRC_USER
SRC_PASSWORD=REPLACE_ME_SRC_PASSWORD
SRC_DATABASE=REPLACE_ME_SRC_DATABASE

# Banco de destino
DST_HOST=REPLACE_ME_DST_HOST
DST_PORT=3306
DST_USER=REPLACE_ME_DST_USER
DST_PASSWORD=REPLACE_ME_DST_PASSWORD
DST_DATABASE=REPLACE_ME_DST_DATABASE

# Concorrência e batches
# Quantas tabelas copiar em paralelo
CONCURRENCY=4
# Quantos DDLs (DROP/CREATE/ALTER) podem rodar em paralelo (mantenha 1 p/ evitar locks)
SCHEMA_CONCURRENCY=1
# Linhas por INSERT (multi-values) durante a cópia por streaming
BATCH_SIZE=5000

# Tamanho máximo do pacote MySQL em MB (padrão: 64)
MAX_ALLOWED_PACKET_MB=64

# Seleção de tabelas (listas separadas por vírgula)
# Inclui apenas estas tabelas; se vazio, migra todas
INCLUDE_TABLES=
# Exclui estas tabelas da migração
EXCLUDE_TABLES=

# Verificação e comportamento
# Compara contagem origem/destino por tabela
VERIFY=1
# Encerra com erro se houver tabelas com falha na execução
FAIL_ON_ERROR=1

# FKs e timeouts
# Remove FKs do CREATE para evitar falhas por ordem; serão recriadas ao final
STRIP_FK=1
# Recria as FKs ao final da importação
RESTORE_FK=1
# Apenas restaurar FKs (não migra dados) quando =1
# RESTORE_FK_ONLY=0
# Apenas copia dados; não cria schemas quando =1
# DATA_ONLY=0
# Trunca tabelas antes de inserir dados no modo DATA_ONLY quando =1
# DATA_ONLY_TRUNCATE=0
# Tempo máximo para DDLs (DROP/CREATE/ALTER), em ms
DDL_TIMEOUT_MS=120000
# Tempo máximo para INSERTs em batch, em ms
FLUSH_TIMEOUT_MS=300000

# Controle de dados por tabela
# Tabelas sem dados: cria schema e AUTO_INCREMENT, mas não insere linhas
NO_DATA_TABLES=
# Tabelas com dados adiados: cria schema agora e insere dados depois (segunda fase)
DEFER_DATA_TABLES=
# Quando =1, inicia automaticamente a fase adiada sem pedir ENTER
DEFER_AUTO_START=0

# Execução a seco (para testes)
DRY_RUN=0
# Ignora conexões (implicado em DRY_RUN)
SKIP_CONNECT=0
